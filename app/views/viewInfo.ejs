                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Cognome:&nbsp;</strong></span> <%=user.Surname%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Email:&nbsp;</strong></span> <%=user.E_mail%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Organizzazione:&nbsp;</strong></span> <%=user.Organization%></li>
                                </ul>
                            </div>  
                         </div>

                        <%}
                         else if(type == "host"){%>
                         <div class="text-center" id="viewp">
