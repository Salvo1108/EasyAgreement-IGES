                                <ul>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">ErasmusCode:&nbsp;</strong></span> <%=user.ErasmusCode%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Faculty:&nbsp;</strong></span> <%=user.Faculty%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Address:&nbsp;</strong></span> <%=user.Address%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Size:&nbsp;</strong></span> <%=user.Size%> </li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Country:&nbsp;</strong></span> <%=user.Country%> </li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Contacts:&nbsp;</strong></span> <%=user.Contacts%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Name:&nbsp;</strong></span> <%=user.Name%></li>

                                </ul>
                            </div>
                         </div>
                         <%}
                        else if(type == "academicTutor"){%>
                            <div class="text-center" id="viewp">
                            <div class="viewdati">
                                <ul>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Nome:&nbsp;</strong></span> <%= user.Name%> </li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Cognome:&nbsp;</strong></span> <%= user.Surname%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Email:&nbsp;</strong></span><%= user.E_mail%></li>
                                    <li class="list-group-item text-left"><span class="pull-left"><strong class="">Dipartimento:&nbsp;</strong></span>  <%= user.Department%></li>
                                </ul>
                            </div>
                         </div>
                         <%}%>
                     </div>
                </div>
            </div>
